@page
@model Elimina
@namespace _04_webapp_sqlite.Prodotti
@{
    ViewData["Title"] = "Elimina?";
}
<h1>@ViewData["Title"]</h1>


<div class="container">

    <h1>Vuoi eliminare @Model.Prodotto.Nome?</h1>
    <form method="post">
            <input type="hidden" asp-for="Prodotto.Id">
        <div>
            <button type="submit" class="btn btn-primary my-3 red">Elimina</button>
        </div>
    </form>
    <a asp-page="/Prodotti/Index"><button class="btn btn-primary my-3">Torna Indietro</button></a>
</div>